@using ProjetoPWEnquete.ViewsModels
@model RegisterViewModel
@{
    ViewData["Title"] = "Cadastro";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}
    <head>
        <link rel="stylesheet" href="~/css/Register.css" asp-append-version="true" />

    </head>

<div class="account-container">
    <div class="account-box">
        <h2>Cadastro</h2>
        <p class="subtitle">Crie sua conta e comece a participar</p>

        <form asp-action="Register" method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

            <div class="mb-3">
                <label asp-for="Name" class="form-label">
                    <i class="bi bi-person"></i>
                    Nome Completo
                </label>
                <input asp-for="Name" class="form-control" placeholder="João da Silva" type="text">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-row">
                <div>
                    <label asp-for="Email" class="form-label">
                        <i class="bi bi-envelope"></i>
                        Email
                    </label>
                    <input asp-for="Email" class="form-control" placeholder="seu@email.com" type="email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div>
                    <label asp-for="Cpf" class="form-label">
                        <i class="bi bi-card-text"></i>
                        CPF
                    </label>
                    <input asp-for="Cpf" class="form-control" placeholder="000.000.000-00" type="text">
                    <span asp-validation-for="Cpf" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div>
                    <label asp-for="Password" class="form-label">
                        <i class="bi bi-lock"></i>
                        Senha
                    </label>
                    <input asp-for="Password" class="form-control" placeholder="••••••••" type="password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div>
                    <label asp-for="ConfirmPassowrd" class="form-label">
                        <i class="bi bi-lock-fill"></i>
                        Confirmar Senha
                    </label>
                    <input asp-for="ConfirmPassowrd" class="form-control" placeholder="••••••••" type="password">
                    <span asp-validation-for="ConfirmPassowrd" class="text-danger"></span>
                </div>
            </div>

            <button type="submit" class="btn btn-register">
                <span>Criar conta</span>
            </button>

            <div class="account-links">
                <p>
                    Já tem uma conta?
                    <a asp-controller="Account" asp-action="Login">
                        Fazer login
                        <i class="bi bi-arrow-right"></i>
                    </a>
                </p>

                <a asp-controller="Home" asp-action="Index" class="back-link">
                    Voltar para início
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}