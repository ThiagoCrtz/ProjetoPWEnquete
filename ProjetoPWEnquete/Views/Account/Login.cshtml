@using ProjetoPWEnquete.ViewsModels;
@model LoginViewModel;
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<head>
    <link rel="stylesheet" href="~/css/Login.css" asp-append-version="true" />

</head>

<div class="account-container">
    <div class="account-box">
        <h2>Login</h2>

        <form asp-action="Login" method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">
                    <i class="bi bi-envelope"></i>
                    Email
                </label>
                <input asp-for="Email" class="form-control" placeholder="seu@email.com" type="email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="password" class="form-label">
                    <i class="bi bi-lock"></i>
                    Senha
                </label>
                <input asp-for="password" class="form-control" placeholder="••••••••" type="password">
                <span asp-validation-for="password" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input asp-for="RememberMe" class="form-check-input" type="checkbox" id="rememberMe" />
                <label class="form-check-label" for="rememberMe">
                    @Html.DisplayNameFor(a => a.RememberMe)
                </label>
            </div>

            <button type="submit" class="btn btn-login">
                <span>Entrar na conta</span>
            </button>

            <div class="account-links">
                <p>
                    Ainda não tem conta?
                    <a asp-controller="Account" asp-action="Register">
                        Cadastre-se
                        <i class="bi bi-arrow-right"></i>
                    </a>
                </p>

                <a asp-controller="Home" asp-action="Index" class="back-link">
                    Voltar para início
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}