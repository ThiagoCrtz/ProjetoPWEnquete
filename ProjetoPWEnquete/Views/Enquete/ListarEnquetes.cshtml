@model IEnumerable<ProjetoPWEnquete.Models.Enquete>



@{
    ViewData["Title"] = "Lista de Enquetes";
}

<h2>@ViewData["Title"]</h2>

@if (!Model.Any())
{
    <p>No polls available right now.</p>
}
else
{
    <div class="container">
        <div class="row">
            @foreach (var enquete in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@enquete.Question</h5>
                            <ul class="list-group list-group-flush mb-3">
                                @foreach (var option in new string[] {
                        enquete.Option1,
                        enquete.Option2,
                        enquete.Option3,
                        enquete.Option4,
                        enquete.Option5,
                        enquete.Option6,
                        enquete.Option7,
                        enquete.Option8,
                        enquete.Option9,
                        enquete.Option10
                                    }.Where(o => !string.IsNullOrWhiteSpace(o)))
                                {
                                    <li class="list-group-item">@option</li>
                                }
                            </ul>
                            <a asp-controller="Enquete" asp-action="DetalhesEnquete" asp-route-id="@enquete.Id" class="btn btn-primary mt-auto">
                                View Details
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
